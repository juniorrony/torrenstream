# Production Environment Variables
NODE_ENV=production
PORT=5000

# Server Configuration
HOST=0.0.0.0
SERVER_URL=https://yourdomain.com
CLIENT_URL=https://yourdom

# Database
DATABASE_PATH=./data/torrents.db

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Security
CORS_ORIGIN=https://yourdomain.com
SESSION_SECRET=your-super-secret-session-key-here-change-this

# Storage
DATA_DIR=/var/lib/torrentstream
TEMP_DIR=/tmp/torrentstream

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Performance
MAX_TORRENTS=50
MAX_CONCURRENT_STREAMS=10
CLEANUP_INTERVAL=3600000

# Network
MAX_PEERS=100
DHT_PORT=6881
TRACKER_ANNOUNCE_INTERVAL=30000